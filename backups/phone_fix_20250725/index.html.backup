    <script src="auto-quote-hero.min.js" defer></script>
    
    <script>
        // Scroll functions
        // Cache DOM queries to prevent forced reflows
        let navbarHeight = null;
        let mobileHeader = null;
        let lastScrollY = 0;
        let ticking = false;
        
        function initializeElements() {
            // Batch DOM reads to avoid forced reflow
            requestAnimationFrame(() => {
                const navbar = document.querySelector('.navbar');
                navbarHeight = navbar ? navbar.offsetHeight : 72;
                mobileHeader = document.querySelector('.mobile-sticky-header');
                if (mobileHeader && window.innerWidth <= 768) {
                    mobileHeader.style.display = 'block';
                }
            });
        }
        
        function scrollToQuote() {
            const quoteForm = document.querySelector('.quote-form');
            if (quoteForm) {
                const targetPosition = quoteForm.offsetTop - navbarHeight - 20;
                
                window.scrollTo({
                    top: targetPosition,
                    behavior: 'smooth'
                });
            }
        }

        function selectInsurance(type) {
            const insuranceSelect = document.getElementById('insuranceType');
            if (insuranceSelect) {
                insuranceSelect.value = type;
            }
            scrollToQuote();
        }

        function scrollToTop() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        }

        // Handle mobile sticky header visibility
        function updateMobileHeader() {
            if (!mobileHeader) return;
            
            // Only show on mobile devices
            if (window.innerWidth > 768) {
                mobileHeader.style.display = 'none';
                mobileHeader.classList.remove('visible');
                return;
            }
            
            if (window.scrollY > 200) {
                mobileHeader.classList.add('visible');
            } else {
                mobileHeader.classList.remove('visible');
            }
        }
        
        // Scroll to top button visibility
        let scrollButton = null;
        let scrollTicking = false;
        
        function updateScrollButton() {
            if (!scrollButton) {
                scrollButton = document.querySelector('.scroll-to-top');
            }
            if (scrollButton) {
                if (window.pageYOffset > 300) {
                    scrollButton.classList.add('visible');
                } else {
                    scrollButton.classList.remove('visible');
                }
            }
            updateMobileHeader();
            scrollTicking = false;
        }
        
        window.addEventListener('scroll', function() {
            if (!scrollTicking) {
                window.requestAnimationFrame(updateScrollButton);
                scrollTicking = true;
            }
        }, { passive: true });
        
        // Initialize on DOM ready
        window.addEventListener('DOMContentLoaded', initializeElements);
        
        // Handle window resize to hide mobile header on desktop
        window.addEventListener('resize', function() {
            if (mobileHeader && window.innerWidth > 768) {
                mobileHeader.style.display = 'none';
                mobileHeader.classList.remove('visible');
            } else if (mobileHeader && window.innerWidth <= 768) {
                mobileHeader.style.display = 'block';
            }
        });

        // Form validation and submission
        function validateForm(form) {
            const inputs = form.querySelectorAll('[required]');
            let isValid = true;
            
            inputs.forEach(input => {
                if (!input.value.trim()) {
                    input.classList.add('error');
                    isValid = false;
                } else {
                    input.classList.remove('error');
                }
            });
            
            return isValid;
        }

        // Handle form submission
        document.getElementById('quoteForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            if (!validateForm(this)) {
                return;
            }
            
            const submitBtn = this.querySelector('button[type="submit"]');
            submitBtn.classList.add('loading');
            submitBtn.disabled = true;
            
            // Get form data
            const formData = new FormData(this);
            
            // Get analyzer data if available
            const analyzerData = sessionStorage.getItem('analyzer_data');
            let additionalInfo = '';
            
            if (analyzerData) {
                try {
                    const data = JSON.parse(analyzerData);
                    additionalInfo = `\n\nAnalyzer Data:\n- Type: ${data.analyzer_type}\n- Analysis Score: ${data.analysis_score}\n- Completed: ${new Date(data.timestamp).toLocaleString()}`;
                    sessionStorage.removeItem('analyzer_data');
                } catch (e) {
                    console.error('Error parsing analyzer data:', e);
                }
            }
            
            // Prepare template parameters for EmailJS
            const templateParams = {
                // Common name field variations
                from_name: formData.get('name'),
                name: formData.get('name'),
                user_name: formData.get('name'),
                customer_name: formData.get('name'),
                
                // Email fields
                from_email: formData.get('email'),
                email: formData.get('email'),
                user_email: formData.get('email'),
                reply_to: formData.get('email'),
                
                // Other fields
                phone: formData.get('phone'),
                user_phone: formData.get('phone'),
                insurance_type: formData.get('insuranceType'),
                insuranceType: formData.get('insuranceType'),
                
                // Full message
                message: `New quote request for ${formData.get('insuranceType')} insurance from ${formData.get('name')}. Phone: ${formData.get('phone')}, Email: ${formData.get('email')}${additionalInfo}`
            };
            
            // Debug: Log the parameters being sent
            // console.log('Sending EmailJS parameters:', templateParams);
            
            // Check if EmailJS is loaded
            if (typeof emailjs === 'undefined') {
                console.error('EmailJS is not loaded!');
                alert('There was an error loading the email service. Please try again or call us at (336) 835-1993.');
                submitBtn.classList.remove('loading');
                submitBtn.disabled = false;
                return;
            }
            
            // Send email using EmailJS
            emailjs.send('service_4flmw3k', 'template_6k9bgwi', templateParams)
                .then(function(response) {
                    // console.log('SUCCESS!', response.status, response.text);
                    
                    // Show success message
                    alert('Thank you! Your quote request has been submitted. We\'ll contact you within 24 hours.');
                    
                    // Reset form
                    document.getElementById('quoteForm').reset();
                    
                    // Remove loading state
                    submitBtn.classList.remove('loading');
                    submitBtn.disabled = false;
                })
                .catch(function(error) {
                    console.error('EmailJS Error:', error);
                    console.error('Error details:', JSON.stringify(error, null, 2));
                    
                    // More detailed error logging
                    if (error.text) {
                        console.error('Error text:', error.text);
                    }
                    if (error.status) {
                        console.error('Error status:', error.status);
                    }
                    
                    // Remove loading state
                    submitBtn.classList.remove('loading');
                    submitBtn.disabled = false;
                    
                    // Try mailto fallback
                    const mailtoLink = `mailto:Save@BillLayneInsurance.com?subject=Quote Request - ${templateParams.insurance_type}&body=Name: ${templateParams.from_name}%0AEmail: ${templateParams.from_email}%0APhone: ${templateParams.phone}%0AInsurance Type: ${templateParams.insurance_type}`;
                    
                    if (confirm('There was an error with the online form. Would you like to open your email client instead?')) {
                        window.location.href = mailtoLink;
                    } else {
                        alert('Please call us at (336) 835-1993 to request your quote.');
                    }
                });
        });

        // Start analyzer system
        function startAnalyzer(type) {
            if (type === 'auto') {
                window.location.href = 'auto-coverage-checkup.html';
            } else if (type === 'home') {
                window.location.href = 'home-insurance-evaluator.html';
            } else if (type === 'umbrella') {
                window.location.href = 'umbrella-policy-calculator.html';
            } else {
                alert(`${type.charAt(0).toUpperCase() + type.slice(1)} coverage analyzer coming soon! Call us at (336) 835-1993 for a personalized analysis.`);
            }
        }

        // Mobile menu toggle functionality
        document.addEventListener('DOMContentLoaded', function() {
            const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
            const navbarMenu = document.querySelector('.navbar-menu');
            
            if (mobileMenuToggle && navbarMenu) {
                mobileMenuToggle.addEventListener('click', function() {
                    navbarMenu.classList.toggle('active');
                    this.classList.toggle('active');
                });
                
            // Check for #quote hash and scroll to form
            if (window.location.hash === '#quote') {
                setTimeout(function() {
                    scrollToQuote();
                }, 500);
            }

                // Close menu when clicking outside
                document.addEventListener('click', function(event) {
                    if (!event.target.closest('.navbar-content')) {
                        navbarMenu.classList.remove('active');
                        mobileMenuToggle.classList.remove('active');
                    }
                });

                // Close menu when clicking on a link
                const navLinks = document.querySelectorAll('.nav-link');
                navLinks.forEach(link => {
                    link.addEventListener('click', function() {
                        navbarMenu.classList.remove('active');
                        mobileMenuToggle.classList.remove('active');
                    });
                });
            }
        });


    </script>

