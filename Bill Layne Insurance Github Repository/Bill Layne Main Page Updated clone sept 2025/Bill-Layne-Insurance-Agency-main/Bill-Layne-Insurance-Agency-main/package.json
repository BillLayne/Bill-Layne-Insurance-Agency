{
  "name": "bill-layne-insurance-agency",
  "version": "2.0.0",
  "description": "Bill Layne Insurance Agency - Professional insurance services website for Elkin, NC",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .js,.html",
    "lint:fix": "eslint . --ext .js,.html --fix",
    "format": "prettier --write \"**/*.{js,html,css,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,html,css,json,md}\"",
    "test": "echo \"No tests configured yet\" && exit 0",
    "optimize:images": "imagemin images/* --out-dir=dist/images",
    "analyze": "vite-bundle-visualizer",
    "clean": "rm -rf dist node_modules/.vite",
    "serve": "npx serve .",
    "validate:html": "html-validate \"*.html\"",
    "validate:css": "stylelint \"**/*.css\"",
    "validate": "npm run validate:html && npm run validate:css && npm run lint",
    "preflight": "npm run format:check && npm run validate && npm run build"
  },
  "keywords": [
    "insurance",
    "auto insurance",
    "home insurance",
    "business insurance",
    "Elkin NC",
    "Mount Airy NC",
    "Surry County",
    "North Carolina"
  ],
  "author": "Bill Layne Insurance Agency",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "@vitejs/plugin-legacy": "^5.2.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-html": "^7.1.0",
    "html-validate": "^8.8.0",
    "imagemin-cli": "^7.0.0",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "sharp": "^0.34.3",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0",
    "tailwindcss": "^3.4.1",
    "terser": "^5.26.0",
    "vite": "^5.0.11",
    "vite-bundle-visualizer": "^1.0.1",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-pwa": "^0.17.4"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.5.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
